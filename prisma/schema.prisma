generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id Int @id @default(autoincrement())
  nama String
  ronde Ronde[]
  skor Skor[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Player {
  id Int @id @default(autoincrement())
  nama_pemain String
  skor Skor[]
}

model Ronde {
  id Int @id @default(autoincrement())
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
  gameId Int 
  jumlahRonde Int
  skor Skor[]
}

model Skor {
  id Int @id @default(autoincrement())
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
  gameId Int
  ronde Ronde @relation(fields: [rondeId], references: [id], onDelete: Cascade)
  rondeId Int
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)
  playerId Int
  Score Decimal
}
